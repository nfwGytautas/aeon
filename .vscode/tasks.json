    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build [All]",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}
